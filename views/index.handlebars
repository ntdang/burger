<h1>Nom Nom Burgers!</h1>

<div class='container'>
  <div class='row'>
    <div class='col s6'>
      <ul>
        {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
      </ul>
    </div>

  </div>

</div>

<div class='col s6'>
  <ul>
    {{#each burgers}} {{#if this.devoured}} {{/if}} {{/each}}
  </ul>
  <div class='burger-eaten'>
    <div>
      {{this.burger_name}}
    </div>
  </div>
</div>

<div class 'row'>
  <div class='col s12'>
    <form class="create-form">
      <div class="form-group">
        <label for="exampleFormControlTextarea1">Enter a burger you want to eat!</label>
        <textarea class="form-control" id="bg" rows="3"></textarea>
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>