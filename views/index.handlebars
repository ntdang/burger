<h1>Nom Nom Burgers!</h1>

{{!-- <h2>Cats that are not sleepy!</h2> --}}

<ul>
  {{#each burgers}}
    {{#unless sleepy}}
      {{> burgers/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

{{!-- <h2>Cats that are sleepy!</h2>

<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul> --}}

{{!-- <h2>Add a Cat</h2> --}}
<form class="create-form">

   <div class="form-group">
    <label for="exampleFormControlTextarea1">Enter a burger you want to eat!</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
  </div>

  <button type="submit">Submit</button>
</form>
